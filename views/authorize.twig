{% extends "base.twig" %}

{% block title %}Approval{% endblock %}
{% block content %}
    <p>An application wants to act on your behalf.</p>

    <dl>
        <dt>Application</dt><dd>{{ client_origin }}</dd>
        <dt>Permissions</dt><dd>{{ scope }}</dd>
    </dl>

    <form method="post">
        <button class="error" type="submit" name="approve" value="no">Reject</button>
        <button class="success" type="submit" name="approve" value="yes">Approve</button>
    </form>
{% endblock %}
